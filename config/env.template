# ===== AZ INTERFACE ENVIRONMENT CONFIGURATION =====
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ===== APPLICATION CONFIGURATION =====
APP_ENV=development
APP_NAME=AZ Interface
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# ===== DATABASE CONFIGURATION =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=az_interface
POSTGRES_USER=az_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ===== REDIS CONFIGURATION =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# ===== AI SERVICE API KEYS =====
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (Local)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2

# ===== BROWSER AUTOMATION =====
PLAYWRIGHT_BROWSER=chromium
CAPTCHA_SOLVER_ENABLED=true
GPU_ACCELERATION=true

# ===== MCP SERVER CONFIGURATION =====
MCP_KNOWLEDGE_PORT=30001
MCP_BROWSER_PORT=30002
MCP_FILESYSTEM_PORT=30003
MCP_DATABASE_PORT=30004
MCP_AUDIT_PORT=30005

# ===== ORCHESTRATION SERVICE =====
ORCHESTRATION_PORT=30007
BROWSER_CONTROLLER_PORT=30006

# ===== MONITORING & ANALYTICS =====
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# ===== FILE STORAGE =====
STORAGE_PATH=/app/storage
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,jpg,png,gif,doc,docx,txt

# ===== RPG DATABASE CONFIGURATION =====
RPG_PDF_STORAGE_PATH=/app/rpg-pdfs
RPG_IMAGE_STORAGE_PATH=/app/rpg-images
RPG_INDEX_PATH=/app/rpg-index

# ===== SEO & MARKETING =====
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
GOOGLE_SEARCH_CONSOLE_ID=your_search_console_id_here

# ===== EXTERNAL INTEGRATIONS =====
# GitHub (for repository analysis)
GITHUB_TOKEN=your_github_token_here

# Discord (for community integration)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# ===== DEVELOPMENT CONFIGURATION =====
NODE_ENV=development
VITE_DEV_SERVER_PORT=5173
VITE_API_BASE_URL=http://localhost:8000

# ===== PRODUCTION CONFIGURATION =====
# Uncomment and configure for production
# NODE_ENV=production
# VITE_API_BASE_URL=https://your-domain.com/api

# ===== BACKUP & RECOVERY =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# ===== PERFORMANCE TUNING =====
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=2GB
CPU_LIMIT=4

# ===== NETWORK CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===== LOGGING CONFIGURATION =====
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
LOG_RETENTION_DAYS=7

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ===== SSL/TLS CONFIGURATION =====
# Uncomment for production SSL
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_ENABLED=true

# ===== DOCKER CONFIGURATION =====
DOCKER_NETWORK_NAME=az_interface_network
DOCKER_VOLUME_PREFIX=az_interface

# ===== GPU CONFIGURATION =====
NVIDIA_VISIBLE_DEVICES=all
GPU_MEMORY_FRACTION=0.8

# ===== MONITORING ENDPOINTS =====
METRICS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686

# ===== DEVELOPMENT TOOLS =====
# Uncomment to enable development tools
# DEBUG_MODE=true
# HOT_RELOAD=true
# PROFILE_MODE=true 